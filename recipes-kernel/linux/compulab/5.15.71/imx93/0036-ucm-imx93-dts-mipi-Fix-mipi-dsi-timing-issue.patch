From a160c6d6bf7380cdd5bfd1e70c1b66e630de9b78 Mon Sep 17 00:00:00 2001
From: Valentin Raevsky <valentin@compulab.co.il>
Date: Fri, 2 Jun 2023 15:51:01 +0300
Subject: [PATCH] ucm-imx93: dts: mipi: Fix mipi dsi timing issue

Signed-off-by: Valentin Raevsky <valentin@compulab.co.il>
---
 arch/arm64/boot/dts/compulab/ucm-imx93-mipi.dtsi | 15 +++++++--------
 1 file changed, 7 insertions(+), 8 deletions(-)

diff --git a/arch/arm64/boot/dts/compulab/ucm-imx93-mipi.dtsi b/arch/arm64/boot/dts/compulab/ucm-imx93-mipi.dtsi
index dbb3ace29260..b48145b76b0d 100644
--- a/arch/arm64/boot/dts/compulab/ucm-imx93-mipi.dtsi
+++ b/arch/arm64/boot/dts/compulab/ucm-imx93-mipi.dtsi
@@ -38,7 +38,7 @@
 };
 
 &lcdif {
-	assigned-clock-rates = <484000000>, <121000000>, <400000000>, <133333333>;
+	assigned-clock-rates = <300000000>, <121000000>, <400000000>, <133333333>;
 	status = "okay";
 };
 
@@ -48,25 +48,24 @@
 	status = "okay";
 	panel@0 {
 		compatible = "startek,kd050hdfia020";
-		/*To be enabled as soon as it designed by hw-dep*/
-		/*backlight = <&dsi_backlight>;*/
+		backlight = <&dsi_backlight>;
 		reset-gpio = <&pca9555 4 GPIO_ACTIVE_LOW>;
 		reg = <0>;
 		dsi-lanes = <4>;
-		panel-width-mm = <63>;
-		panel-height-mm = <115>;
+		panel-width-mm = <62>;
+		panel-height-mm = <110>;
 		status = "okay";
 
 		panel-timing {
 				clock-frequency = <60000000>;
 				/*X*/
 				hsync-len     = <10>;
-				hback-porch   = <10>;
+				hback-porch   = <30>;
 				hactive       = <720>;
 				hfront-porch  = <20>;
 				/*Y*/
-				vsync-len     = <20>;
-				vback-porch   = <30>;
+				vsync-len     = <10>;
+				vback-porch   = <20>;
 				vactive       = <1280>;
 				vfront-porch  = <10>;
 		};
